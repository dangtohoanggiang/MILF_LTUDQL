 public partial class Form1 : Form
{
    private DataTable dsMan; 
    private DataTable dsChiNhanh;
    private DataTable BaoCaoDonHang;
    private DataTable ChiTietDonHang;
    private DataView data_view;
    private Provider provider = new Provider();
    private void Form1_Load(object sender, EventArgs e)
    {
           //Menu
            dsMan = new DataTable();
            dsMan.Columns.Add("ID");
            dsMan.Columns.Add("Tên");
            dsMan.Columns.Add("Danh m?c");
            dsMan.Columns.Add("Giá");
            string strSql = "Select * From MonAn";
            provider.Connect();
            dsMan = provider.Select(CommandType.Text, strSql);
            data_view = new DataView(dsMan);
            dataGridView2.DataSource = data_view;
            dataGridView2.ReadOnly = true;

            //Combobox Menu
            cbbox_Danhmuc.Items.Add("T?t c?");
            SqlDataReader reader = provider.GetReader(CommandType.Text, "SELECT Danhmuc FROM MonAn");
            while (reader.Read())
            {
                cbbox_Danhmuc.Items.Add(reader[0]);
            }
            for (int i = 0; i < cbbox_Danhmuc.Items.Count; i++)
            {
                for (int j = i + 1; j < cbbox_Danhmuc.Items.Count; j++)
                {
                    if (cbbox_Danhmuc.Items[i].Equals(cbbox_Danhmuc.Items[j].ToString()))
                    {
                        cbbox_Danhmuc.Items.RemoveAt(j);
                    }
                }
            }
            provider.Disconnect();
         //Chi nhánh
            Provider provider1 = new Provider();
            provider1.Connect();
            SqlDataReader readerr = provider1.GetReader(CommandType.Text, "SELECT TenChiNhanh FROM ChiNhanh");
            while (readerr.Read())
            {
                cbbox_ChiNhanh.Items.Add(readerr[0]);
            }
            provider1.Disconnect();
        //Báo cáo
        //Combobox Month trong báo cáo
        for(int i = 0; i < 12; i++)
        {
            cbbox_Month.Items.Add(i + 1);
        }

        //Báo cáo đơn hàng
        BaoCaoDonHang = new DataTable();
        BaoCaoDonHang.Columns.Add("ID Đơn hàng");
        BaoCaoDonHang.Columns.Add("ID Chi nhánh");
        BaoCaoDonHang.Columns.Add("Tổng tiền");
        BaoCaoDonHang.Columns.Add("Ngày");
        data_view = new DataView(BaoCaoDonHang);
        dataGridView_BaoCaoDonHang.DataSource = data_view;
        dataGridView_DonHang.ReadOnly = true;
        
        //Chi tiết đơn hàng
        ChiTietDonHang = new DataTable();
        ChiTietDonHang.Columns.Add("ID Đơn hàng");//Ẩn
        ChiTietDonHang.Columns.Add("ID Chi nhánh");//Ẩn
        ChiTietDonHang.Columns.Add("Tên món ăn");//IDMenu
        ChiTietDonHang.Columns.Add("Số bàn");
        ChiTietDonHang.Columns.Add("Số lượng");
        ChiTietDonHang.Columns.Add("Giá");
        ChiTietDonHang.Columns.Add("Ngày");//Ẩn
        data_view = new DataView(ChiTietDonHang);
        dataGridView_ChiTietDonHang.DataSource = data_view;
        dataGridView_ChiTietDonHang.Columns[0].Visible = false;
        dataGridView_ChiTietDonHang.Columns[1].Visible = false;
        dataGridView_ChiTietDonHang.Columns[6].Visible = false;
        dataGridView_ChiTietDonHang.ReadOnly = true;
    }
}
